<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Внешнее кольцо (ring) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/peach_light"/>
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>

    <!-- Основной круг -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/soft_coral"/>
            <stroke android:width="2dp" android:color="@color/coral_medium"/>
            <size android:width="44dp" android:height="44dp"/>
        </shape>
    </item>

</layer-list>
