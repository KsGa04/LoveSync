<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Закругленные углы -->
    <corners android:radius="16dp"/>

    <!-- Градиентный фон активной кнопки -->
    <gradient
        android:angle="0"
        android:startColor="@color/peach_light"
        android:endColor="@color/coral_medium"
        android:type="linear"/>

    <!-- Тень -->
    <padding android:bottom="2dp"/>
    <solid android:color="@color/peach_light"/>

</shape>
